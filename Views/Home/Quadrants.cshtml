@{
    ViewData["Title"] = "Quadrants";
}
@model IEnumerable<Mission8_2_5.Models.Task>

<div class="container bg-light text-center">
    @* Title Row *@
    <div class="row">
        <div class="col-12">
            <h1>Time Management Matrix</h1>
        </div>
    </div>
    @* Headers *@
    <div class="row">
        <div class="col-2">
            @* empty column to match stuff up for now *@
        </div>
        <div class="col-5">
            <h3>Urgent</h3>
        </div>
        <div class="col-5">
            <h3>Not Urgent</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-2">
            <h3>Important</h3>
        </div>
        <div class="col-5">
            <h4>Quadrant 1</h4>
            @* Display Quadrant 2 Tasks Here *@
            @foreach (var x in Model)
            {
                @if (x.quadrant == 1)
                {
                    @if (x.completed == false)
                    {
                        <div>
                            <p>
                                @x.TaskName | Category: @x.Category.categoryName | Due: @x.dueDate |
                                <a asp-controller="Home" asp-action="AddEdit" asp-route-taskId="@x.TaskId">Edit</a> |
                                <a asp-controller="Home" asp-action="Delete" asp-route-taskId="@x.TaskId">Delete</a>
                            </p>
                        </div>
                    }
                }
            }
        </div>
        <div class="col-5">
            <h4>Quadrant 2</h4>
            @* Display Quadrant 2 Tasks Here *@
            @foreach (var x in Model)
            {
                @if (x.quadrant == 2)
